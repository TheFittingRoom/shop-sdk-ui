{
  "name": "@thefittingroom/shop-ui",
  "version": "4.0.0",
  "description": "the fitting room UI library",
  "type": "module",
  "main": "./dist/esm/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "clean:all": "rm -rf dist build .rollup.cache",
    "build:prod": "pnpm run clean && NODE_ENV=prod rollup --config",
    "build:dev": "pnpm run clean && NODE_ENV=dev rollup --config",
    "watch:prod": "pnpm run clean && NODE_ENV=prod rollup --config -w",
    "watch:dev": "pnpm run clean && NODE_ENV=dev rollup --config -w",
    "serve": "live-server --host=localhost --port=3030 --cors",
    "pub": "pnpm run build:prod && pnpm publish --access public",
    "fix": "biome check --fix --unsafe && biome lint --fix --unsafe && biome format --fix"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "esbuild": "^0.25.9",
    "live-server": "1.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rollup": "4.50.2",
    "rollup-plugin-dotenv": "^0.5.1",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-plugin-postcss": "^4.0.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.3",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@preact/signals": "^2.3.2",
    "@tanstack/react-query": "^5.90.5",
    "@thefittingroom/sdk": "2.0.8",
    "clsx": "^2.1.1",
    "preact": "^10.27.2"
  }
}
