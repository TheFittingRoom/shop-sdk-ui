{
  "name": "@thefittingroom/shop-ui",
  "version": "3.2.3",
  "description": "the fitting room UI library",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "clean:all": "rm -rf dist build",
    "build:prod": "npm run clean && NODE_ENV=prod vite build && npx terser dist/index.js -o dist/index.min.js --comments",
    "build:dev": "npm run clean && NODE_ENV=dev vite build",
    "dev": "vite",
    "watch:prod": "NODE_ENV=prod vite build --watch",
    "watch:dev": "NODE_ENV=dev vite build --watch",
    "serve": "vite preview --host localhost --port 3030",
    "pub": "npm run build:prod && npm publish --access public"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "prettier": "^3.6.2",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.2"
  },
  "dependencies": {
    "dayjs": "^1.11.19",
    "firebase": "^12.5.0"
  }
}
